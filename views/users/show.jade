extends ../layout

block content
  .container
    h1.page-header 회원 정보
          
    ul
      li 이름: #{user.name}
      li 이메일: #{user.email}
    table.table.table-bordered
      thead
        tr
          th 제목
          th 도시
          th 숙소요금
          th 조회수
          th
      tbody
        each post in posts
          tr
            td
              a(href='/posts/#{post.id}')= post.title
            td= post.city
            td= post.fee
            td= post.read
            td
              a.btn.btn-xs.btn-default(href='/posts/#{post.id}/edit') 수정
              | 
              a.btn.btn-xs.btn-default(href='/posts/#{post._id}?_method=DELETE') 삭제
              
    hr
    p
      if(currentUser === 'root@root.com')
        a.btn.btn-default(href='/users/') 목록
      | 
      a.btn.btn-default(href='/users/#{user._id}/edit') 수정
      | 
      a.btn.btn-default(href='/users/#{user._id}?_method=DELETE') 삭제
